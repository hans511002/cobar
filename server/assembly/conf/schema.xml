<!DOCTYPE cobar:schema SYSTEM "schema.dtd">
<cobar:schema xmlns:cobar="http://cobar.alibaba.com/">

 <schema name="test" dataNode="netDb[0]" keepSqlSchema="true" openRWSep="true" writeIndex="0"> 
    	    <table name="p"   dataNode="netDb[0],netDb[1]" rule="rule1" />
  </schema> 
  
  <!-- schema定义 writeIndex 指定写节点的索引-->
  <schema name="test1" dataNode="netDb[0]" keepSqlSchema="true" writeIndex="0">
    <table name="P_.*" dataNode="netDb$0-1" rule="RULE_IMSI_ND10" groupType="regex" comData="true"/>
  </schema>
 
    
  <!-- 数据节点定义，数据节点由数据源和其他一些参数组织而成。-->
  <dataNode name="netDb">
    <property name="dataSource">
      <dataSourceRef>netDbMaster$0-1</dataSourceRef>
      <dataSourceRef>netDbSlave$0-1</dataSourceRef>
    </property>

    <!--Cobar与后端数据源连接池大小设置-->
	<property name="poolSize">128</property>
	<property name="heartbeatSQL">select user()</property>
  </dataNode>
   <!-- 数据节点定义，数据节点由数据源和其他一些参数组织而成。-->
     <dataSource name="netDbMaster" type="mysql">
    <property name="location">
      <location>172.16.131.131:3306/test</location>
      <location>172.16.131.37:3306/test</location>     
    </property>
    <property name="user">sdba</property>
    <property name="password">sdba</property>
    <property name="sqlMode">STRICT_TRANS_TABLES</property>
  </dataSource>
  
    <dataSource name="netDbSlave" type="mysql">
    <property name="location">
      <location>172.16.131.37:3306/test</location>        
      <location>172.16.131.131:3306/test</location>
    </property>
    <property name="user">sdba</property>
    <property name="password">sdba</property>
    <property name="sqlMode">STRICT_TRANS_TABLES</property>
  </dataSource>

</cobar:schema>
